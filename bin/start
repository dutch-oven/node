#!/usr/bin/env node

/**
 * Module dependencies.
 */
require = require('esm')(module);
const makeApp = require('../src/index.js').default;
const makeDebug = require('debug');

/**
 * Get the config and build the app
 */

let config;
if(process.argv.length > 2) config = JSON.parse(process.argv[2]);

// debug may not be needed
const debug = makeDebug((config && config.appName) ? config.appName : 'node-util');

const app = makeApp(config);

app.start();